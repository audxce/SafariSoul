@page
@model SafariSoul.Pages.ExhibitCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Create Exhibit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Exhibit.ExhibitNo" class="control-label"></label>
                <input asp-for="Exhibit.ExhibitNo" class="form-control" />
                <span asp-validation-for="Exhibit.ExhibitNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exhibit.ExhibitName" class="control-label"></label>
                <input asp-for="Exhibit.ExhibitName" class="form-control" />
                <span asp-validation-for="Exhibit.ExhibitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exhibit.Location" class="control-label"></label>
                <select asp-for="Exhibit.Location" class ="form-control" asp-items="ViewBag.Location"></select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Exhibit.IsIndoors" /> @Html.DisplayNameFor(model => model.Exhibit.IsIndoors)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Exhibit.Zookeeper" class="control-label"></label>
                <select asp-for="Exhibit.Zookeeper" class ="form-control" asp-items="ViewBag.Zookeeper"></select>
            </div>
            <div class="form-group">
                <label asp-for="Exhibit.UpperTemperature" class="control-label"></label>
                <input asp-for="Exhibit.UpperTemperature" class="form-control" />
                <span asp-validation-for="Exhibit.UpperTemperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exhibit.LowerTemperature" class="control-label"></label>
                <input asp-for="Exhibit.LowerTemperature" class="form-control" />
                <span asp-validation-for="Exhibit.LowerTemperature" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exhibit.Humidity" class="control-label"></label>
                <input asp-for="Exhibit.Humidity" class="form-control" />
                <span asp-validation-for="Exhibit.Humidity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Exhibit.Flora" class="control-label"></label>
                <input asp-for="Exhibit.Flora" class="form-control" />
                <span asp-validation-for="Exhibit.Flora" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

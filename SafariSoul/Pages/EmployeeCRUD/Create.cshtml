@page
@model SafariSoul.Pages.EmployeeCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_NewLayout.cshtml";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Create Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.Fname" class="control-label">First Name</label>
                <input asp-for="Employee.Fname" class="form-control" />
                <span asp-validation-for="Employee.Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Minit" class="control-label">Middle Initial</label>
                <input asp-for="Employee.Minit" class="form-control" />
                <span asp-validation-for="Employee.Minit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Lname" class="control-label">Last Name</label>
                <input asp-for="Employee.Lname" class="form-control" />
                <span asp-validation-for="Employee.Lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Bdate" class="control-label">Date of Birth</label>
                <input asp-for="Employee.Bdate" type = "date" class="form-control" />
                <span asp-validation-for="Employee.Bdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Occupation" class="control-label"></label>
                <input asp-for="Employee.Occupation" class="form-control" />
                <span asp-validation-for="Employee.Occupation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DeptName" class="control-label">Department</label>
                <select asp-for="Employee.DeptName" class ="form-control" asp-items="ViewBag.DeptName"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employee.SupId" class="control-label">Supervisor</label>
                <select asp-for="Employee.SupId" class ="form-control" asp-items="ViewBag.SupId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Salary" class="control-label">Salary</label>
                <input asp-for="Employee.Salary" class="form-control" />
                <span asp-validation-for="Employee.Salary" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.MobilePhoneNum" class="control-label">Phone Number</label>
                <input asp-for="Employee.MobilePhoneNum" class="form-control" />
                <span asp-validation-for="Employee.MobilePhoneNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Address" class="control-label"></label>
                <input asp-for="Employee.Address" class="form-control" />
                <span asp-validation-for="Employee.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmergencyContactName" class="control-label">Emergency Contact Name</label>
                <input asp-for="Employee.EmergencyContactName" class="form-control" />
                <span asp-validation-for="Employee.EmergencyContactName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmergencyContactPhone" class="control-label">Emergency Contact Phone</label>
                <input asp-for="Employee.EmergencyContactPhone" class="form-control" />
                <span asp-validation-for="Employee.EmergencyContactPhone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.EmergencyContactEmail" class="control-label">Emergency Contact Email</label>
                <input asp-for="Employee.EmergencyContactEmail" class="form-control" />
                <span asp-validation-for="Employee.EmergencyContactEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DateJoined" class="control-label">Date Joined</label>
                <input asp-for="Employee.DateJoined" type = "date" class="form-control" />
                <span asp-validation-for="Employee.DateJoined" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.DateLeft" class="control-label">Date Left</label>
                <input asp-for="Employee.DateLeft" type ="date" class="form-control" />
                <span asp-validation-for="Employee.DateLeft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.VacationDaysLeft" class="control-label">Vacation Days</label>
                <input asp-for="Employee.VacationDaysLeft" class="form-control" />
                <span asp-validation-for="Employee.VacationDaysLeft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.SickDaysLeft" class="control-label">Sick Days</label>
                <input asp-for="Employee.SickDaysLeft" class="form-control" />
                <span asp-validation-for="Employee.SickDaysLeft" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

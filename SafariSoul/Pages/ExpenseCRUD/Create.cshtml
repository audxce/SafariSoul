@page
@model SafariSoul.Pages.ExpenseCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>


<h4>Create Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseId" class="control-label">Expense ID</label>
                <input asp-for="Expense.ExpenseId" class="form-control" />
                <span asp-validation-for="Expense.ExpenseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseTime" class="control-label">Expense Time</label>
                <input asp-for="Expense.ExpenseTime" class="form-control" />
                <span asp-validation-for="Expense.ExpenseTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.Category" class="control-label"></label>
                <select asp-for="Expense.Category" class="form-control">
                    <option value="">-- Select Category --</option>
                    <option value="Employee">Employee</option>
                    <option value="Vendor">Vendor</option>
                </select>
                <span asp-validation-for="Expense.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.DeptId" class="control-label">Department ID</label>
                <select asp-for="Expense.DeptId" class ="form-control" asp-items="ViewBag.DeptId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseDescription" class="control-label">Description</label>
                <input asp-for="Expense.ExpenseDescription" class="form-control" />
                <span asp-validation-for="Expense.ExpenseDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseAccount" class="control-label">Account</label>
                <input asp-for="Expense.ExpenseAccount" class="form-control" />
                <span asp-validation-for="Expense.ExpenseAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseAmount" class="control-label">Amount</label>
                <input asp-for="Expense.ExpenseAmount" class="form-control" />
                <span asp-validation-for="Expense.ExpenseAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.VendorId" class="control-label">Vendor ID</label>
                <select asp-for="Expense.VendorId" class ="form-control" asp-items="ViewBag.VendorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Expense.EmployeeNum" class="control-label">Employee ID</label>
                <select asp-for="Expense.EmployeeNum" class ="form-control" asp-items="ViewBag.EmployeeNum"></select>
            </div>
            <div class="form-group">
                <label asp-for="Expense.InvoiceNo" class="control-label">Invoice No</label>
                <input asp-for="Expense.InvoiceNo" class="form-control" />
                <span asp-validation-for="Expense.InvoiceNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ReceiptImage" class="control-label">Reciept Image</label>
                <input asp-for="Expense.ReceiptImage" class="form-control" />
                <span asp-validation-for="Expense.ReceiptImage" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

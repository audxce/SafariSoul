                <span asp-validation-for="Department.ManagerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.PhoneNum" class="control-label"></label>
                <input asp-for="Department.PhoneNum" class="form-control" />
                <span asp-validation-for="Department.PhoneNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.Email" class="control-label"></label>
                <input asp-for="Department.Email" class="form-control" />
                <span asp-validation-for="Department.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.Location" class="control-label"></label>
                <input asp-for="Department.Location" class="form-control" />
                <span asp-validation-for="Department.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.Budget" class="control-label"></label>
                <input asp-for="Department.Budget" class="form-control" />
                <span asp-validation-for="Department.Budget" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Department.Description" class="control-label"></label>
                <input asp-for="Department.Description" class="form-control" />
                <span asp-validation-for="Department.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


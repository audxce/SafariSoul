@model SafariSoul.Pages.DepartmentCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Department[0].DeptName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department[0].PhoneNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department[0].Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department[0].Location)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department[0].Budget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Department[0].Manager)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Department) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeptName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Budget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manager.EmployeeId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.DeptId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.DeptId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.DeptId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model SafariSoul.Pages.Data_Entry_Forms.EmployeeData
@{
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<form method="post">
    <div class="form-group">
        <label for="Fname">First Name:</label>
        <input type="text" class="form-control" id="Fname" name="Fname" required maxlength="20">
    </div>
    <div class="form-group">
        <label for="Minit">Middle Initial:</label>
        <input type="text" class="form-control" id="Minit" name="Minit" maxlength="1">
    </div>
    <div class="form-group">
        <label for="Lname">Last Name:</label>
        <input type="text" class="form-control" id="Lname" name="Lname" required maxlength="20">
    </div>
    <div class="form-group">
        <label for="Bdate">Birthdate:</label>
        <input type="date" class="form-control" id="Bdate" name="Bdate">
    </div>
    <div class="form-group">
        <label for="Training_and_Certs">Training and Certifications:</label>
        <textarea class="form-control" id="Training_and_Certs" name="Training_and_Certs"></textarea>
    </div>
    <div class="form-group">
        <label for="Occupation">Occupation:</label>
        <input type="text" class="form-control" id="Occupation" name="Occupation" required maxlength="30">
    </div>
    <div class="form-group">
        <label for="Time_Based_Benefits">Time-Based Benefits:</label>
        <textarea class="form-control" id="Time_Based_Benefits" name="Time_Based_Benefits"></textarea>
    </div>
    <div class="form-group">
        <label for="Occupation_Based_Benefits">Occupation-Based Benefits:</label>
        <textarea class="form-control" id="Occupation_Based_Benefits" name="Occupation_Based_Benefits"></textarea>
    </div>
    <div class="form-group">
        <label for="Location">Location:</label>
        <input type="number" class="form-control" id="Location" name="Location">
    </div>
    <div class="form-group">
        <label for="Dept_No">Department Number:</label>
        <input type="number" class="form-control" id="Dept_No" name="Dept_No" required>
    </div>
    <div class="form-group">
        <label for="Wage">Wage:</label>
        <input type="number" class="form-control" id="Wage" name="Wage" step="0.01">
    </div>
    <div class="form-group">
        <label for="Insurance_Plan">Insurance Plan:</label>
        <input type="text" class="form-control" id="Insurance_Plan" name="Insurance_Plan" maxlength="20">
    </div>
    <div class="form-group">
        <label for="Work_Phone_Num">Work Phone Number:</label>
        <input type="tel" class="form-control" id="Work_Phone_Num" name="Work_Phone_Num" maxlength="10">
    </div>
    <div class="form-group">
        <label for="Mobile_Phone_Num">Mobile Phone Number:</label>
        <input type="tel" class="form-control" id="Mobile_Phone_Num" name="Mobile_Phone_Num" maxlength="10">
    </div>
    <div class="form-group">
        <label for="Email">Email:</label>
        <input type="email" class="form-control" id="Email" name="Email" maxlength="50">
    </div>
    <div class="form-group">
        <label for="Address">Address:</label>
        <input type="text" class="form-control" id="Address" name="Address" maxlength="50">
    </div>
    <div class="form-group">
        <label for="Emergency_Contact_Name">Emergency Contact Name:</label>
        <input type="text" class="form-control" id="Emergency_Contact_Name" name="Emergency_Contact_Name" maxlength="40">
    </div>
    <div class="form-group">
        <label for="Emergency_Contact_Phone">Emergency Contact Phone Number:</label>
        <input type="tel" class="form-control" id="Emergency_Contact_Phone" name="Emergency_Contact_Phone" maxlength="10">
    </div>
    <div class="form-group">
        <label for="Emergency_Contact_Email">Emergency Contact Email:</label>
        <input type="email" class="form-control" id="Emergency_Contact_Email" name="Emergency_Contact_Email" maxlength="50">
    </div>
    <div class="form-group">
        <label for="Date_Joined">Date Joined:</label>
        <input type="date" class="form-control" id="Date_Joined" name="Date_Joined" required>
    </div>
    <div style="height: 20px;"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
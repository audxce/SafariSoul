@page
@model SafariSoul.Pages.Data_Entry_Forms.ExhibitData
@{
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<form method="post">
  <div class="form-group">
        <label for="Location">Location:</label>
        <select class="form-control" id="Location" name="Location" required>
            <option value="Aquarium">Aquarium</option>
            <option value="Aviary">Aviary</option>
            <option value="Primate House">Primate House</option>
            <option value="Reptile House">Reptile House</option>
        </select>
    </div>
    <div class="form-group">
        <label for="Is_Indoors">Is Indoors:</label>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Is_Indoors" id="Is_Indoors1" value="true" required>
            <label class="form-check-label" for="Is_Indoors1">
                True
            </label>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="radio" name="Is_Indoors" id="Is_Indoors2" value="false" required>
            <label class="form-check-label" for="Is_Indoors2">
                False
            </label>
        </div>
    </div>
    <div class="form-group">
        <label for="Zookeeper">Zookeeper:</label>
        <input type="number" class="form-control" id="Zookeeper" name="Zookeeper" required>
    </div>
    <div class="form-group">
        <label for="Upper_Temperature">Upper Temperature: (°F)</label>
        <input type="number" step="0.1" class="form-control" id="Upper_Temperature" name="Upper_Temperature" required>
    </div>
    <div class="form-group">
        <label for="Lower_Temperature">Lower Temperature: (°F)</label>
        <input type="number" step="0.1" class="form-control" id="Lower_Temperature" name="Lower_Temperature" required>
    </div>
    <div class="form-group">
        <label for="Humidity">Humidity: (%)</label>
        <input type="number" step="0.1" class="form-control" id="Humidity" name="Humidity" required>
    </div>
    <div class="form-group">
        <label for="Flora">Flora:</label>
        <input type="text" class="form-control" id="Flora" name="Flora">
    </div>
    <div style="height: 20px;"></div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
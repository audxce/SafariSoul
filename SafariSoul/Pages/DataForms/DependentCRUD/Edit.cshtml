@page
@model SafariSoul.Pages.DependentCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
    @if (@HttpContext.Session.GetString("_Type") == "Admin")
        Layout = "_NewLayout";
    @if (@HttpContext.Session.GetString("_Type") == "Other Employee")
        Layout = "_LayoutEmployee";
    @if (@HttpContext.Session.GetString("_Type") == "Animal Handler")
        Layout = "_LayoutAnimalHandler";
    @if (@HttpContext.Session.GetString("_Type") == "Accountant")
        Layout = "_LayoutAccountant";
    @if (@HttpContext.Session.GetString("_Type") == "Human Resources")
        Layout = "_LayoutHumanResources";
    @if (@HttpContext.Session.GetString("_Type") == "Maintenance")
        Layout = "_LayoutMaintenance";
    @if (@HttpContext.Session.GetString("_Type") == "Sales")
        Layout = "_LayoutSales";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Edit Dependent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <input type="hidden" asp-for="Dependent.DependentId" />
            <input type="hidden" asp-for="Dependent.CreatedAt" />
            <div class="form-group">
                <label asp-for="Dependent.EmployeeId" class="control-label">Dependent on which Employee?</label>
                <select asp-for="Dependent.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId">
                    <option value="">-- Select Employee --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Dependent.Fname" class="control-label">First Name</label>
                <input asp-for="Dependent.Fname" class="form-control" />
                <span asp-validation-for="Dependent.Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependent.Lname" class="control-label">Last Name</label>
                <input asp-for="Dependent.Lname" class="form-control" />
                <span asp-validation-for="Dependent.Lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependent.Bdate" class="control-label">Date of Birth</label>
                <input asp-for="Dependent.Bdate" class="form-control" />
                <span asp-validation-for="Dependent.Bdate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependent.Gender" class="control-label"></label>
                <select asp-for="Dependent.Gender" class="form-control">
                    <option value="">-- Select Gender --</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Dependent.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependent.PhoneNum" class="control-label"></label>
                <input asp-for="Dependent.PhoneNum" class="form-control" />
                <span asp-validation-for="Dependent.PhoneNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependent.Email" class="control-label"></label>
                <input asp-for="Dependent.Email" class="form-control" />
                <span asp-validation-for="Dependent.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dependent.Address" class="control-label"></label>
                <input asp-for="Dependent.Address" class="form-control" />
                <span asp-validation-for="Dependent.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

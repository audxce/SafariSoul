@page
@model SafariSoul.Pages.VendorCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
    @if (@HttpContext.Session.GetString("_Type") == "Admin")
        Layout = "_NewLayout";
    @if (@HttpContext.Session.GetString("_Type") == "Other Employee")
        Layout = "_LayoutEmployee";
    @if (@HttpContext.Session.GetString("_Type") == "Animal Handler")
        Layout = "_LayoutAnimalHandler";
    @if (@HttpContext.Session.GetString("_Type") == "Accountant")
        Layout = "_LayoutAccountant";
    @if (@HttpContext.Session.GetString("_Type") == "Human Resources")
        Layout = "_LayoutHumanResources";
    @if (@HttpContext.Session.GetString("_Type") == "Maintenance")
        Layout = "_LayoutMaintenance";
    @if (@HttpContext.Session.GetString("_Type") == "Sales")
        Layout = "_LayoutSales";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Edit Vendor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Vendor.VendorId" />
            <input type="hidden" asp-for="Vendor.CreatedAt" />
            <div class="form-group">
                <label asp-for="Vendor.VendorName" class="control-label">Vendor Name</label>
                <input asp-for="Vendor.VendorName" class="form-control" />
                <span asp-validation-for="Vendor.VendorName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendor.ProductsAndServices" class="control-label">Products and Services</label>
                <input asp-for="Vendor.ProductsAndServices" class="form-control" />
                <span asp-validation-for="Vendor.ProductsAndServices" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Vendor.ContractInformation" class="control-label">Contract Information</label>
                <input asp-for="Vendor.ContractInformation" class="form-control" />
                <span asp-validation-for="Vendor.ContractInformation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@page
@model SafariSoul.Pages.SpeciesCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
    @if (@HttpContext.Session.GetString("_Type") == "Admin")
        Layout = "_NewLayout";
    @if (@HttpContext.Session.GetString("_Type") == "Other Employee")
        Layout = "_LayoutEmployee";
    @if (@HttpContext.Session.GetString("_Type") == "Animal Handler")
        Layout = "_LayoutAnimalHandler";
    @if (@HttpContext.Session.GetString("_Type") == "Accountant")
        Layout = "_LayoutAccountant";
    @if (@HttpContext.Session.GetString("_Type") == "Human Resources")
        Layout = "_LayoutHumanResources";
    @if (@HttpContext.Session.GetString("_Type") == "Maintenance")
        Layout = "_LayoutMaintenance";
    @if (@HttpContext.Session.GetString("_Type") == "Sales")
        Layout = "_LayoutSales";
}

<h1>Species Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].CommonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].Genus)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].Species1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].Exhibit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].ActiveHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].ConservationStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Species) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CommonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exhibit.ExhibitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConservationStatus)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SpeciesId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SpeciesId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SpeciesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@page
@model SafariSoul.Pages.SpeciesCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_NewLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].CommonName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].Exhibit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].RegionsFound)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].Diet)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].ActiveHours)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species[0].ConservationStatus)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Species) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kingdom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Phylum)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Class)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Order)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Family)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Species1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LifeExpectancy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NormalBodyTemperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegionsFound)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Diet)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Humidity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ActiveHours)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConservationStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommonName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Exhibit.ExhibitName)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.SpeciesId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.SpeciesId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.SpeciesId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

}

<h1>Memership Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].MembershipLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].MembershipFee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Membership[0].Benefits)
            </th>
            <th></th>
        </tr>

@page
@model SafariSoul.Pages.EmployeeShiftCRUD.DetailsModel

@{
    ViewData["Title"] = "Details";
    @if (@HttpContext.Session.GetString("_Type") == "Admin")
        Layout = "_NewLayout";
    @if (@HttpContext.Session.GetString("_Type") == "Other Employee")
        Layout = "_LayoutEmployee";
    @if (@HttpContext.Session.GetString("_Type") == "Animal Handler")
        Layout = "_LayoutAnimalHandler";
    @if (@HttpContext.Session.GetString("_Type") == "Accountant")
        Layout = "_LayoutAccountant";
    @if (@HttpContext.Session.GetString("_Type") == "Human Resources")
        Layout = "_LayoutHumanResources";
    @if (@HttpContext.Session.GetString("_Type") == "Maintenance")
        Layout = "_LayoutMaintenance";
    @if (@HttpContext.Session.GetString("_Type") == "Sales")
        Layout = "_LayoutSales";
}

<h1>Shift Details</h1>

<div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            <dl>
                <dt>@Html.DisplayNameFor(model => model.EmployeeShift.ShiftStart)</dt>
                <dd>@Html.DisplayFor(model => model.EmployeeShift.ShiftStart)</dd>

                <dt>@Html.DisplayNameFor(model => model.EmployeeShift.ShiftEnd)</dt>
                <dd>@Html.DisplayFor(model => model.EmployeeShift.ShiftEnd)</dd>

                <dt>@Html.DisplayNameFor(model => model.EmployeeShift.LunchStart)</dt>
                <dd>@Html.DisplayFor(model => model.EmployeeShift.LunchStart)</dd>

                <dt>@Html.DisplayNameFor(model => model.EmployeeShift.LunchEnd)</dt>
                <dd>@Html.DisplayFor(model => model.EmployeeShift.LunchEnd)</dd>

                <dt>@Html.DisplayNameFor(model => model.EmployeeShift.Employee)</dt>
                <dd>@Html.DisplayFor(model => model.EmployeeShift.Employee.FullName)</dd>

                <dt>@Html.DisplayNameFor(model => model.EmployeeShift.CreatedAt)</dt>
                <dd>@Html.DisplayFor(model => model.EmployeeShift.CreatedAt)</dd>

                <dt>@Html.DisplayNameFor(model => model.EmployeeShift.UpdatedAt)</dt>
                <dd>@Html.DisplayFor(model => model.EmployeeShift.UpdatedAt)</dd>
            </dl>
        </div>
    </div>
</div>

<div>
    <a asp-page="./Edit" asp-route-id="@Model.EmployeeShift?.ShiftId">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

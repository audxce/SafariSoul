@page
@model SafariSoul.Pages.ExpenseItemsCRUD.IndexModel

@{
    ViewData["Title"] = "Index";
    @if (@HttpContext.Session.GetString("_Type") == "Admin")
        Layout = "_NewLayout";
    @if (@HttpContext.Session.GetString("_Type") == "Other Employee")
        Layout = "_LayoutEmployee";
    @if (@HttpContext.Session.GetString("_Type") == "Animal Handler")
        Layout = "_LayoutAnimalHandler";
    @if (@HttpContext.Session.GetString("_Type") == "Accountant")
        Layout = "_LayoutAccountant";
    @if (@HttpContext.Session.GetString("_Type") == "Human Resources")
        Layout = "_LayoutHumanResources";
    @if (@HttpContext.Session.GetString("_Type") == "Maintenance")
        Layout = "_LayoutMaintenance";
    @if (@HttpContext.Session.GetString("_Type") == "Sales")
        Layout = "_LayoutSales";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseItem[0].ItemQuantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseItem[0].CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseItem[0].UpdatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseItem[0].Expense)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ExpenseItem[0].Item)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ExpenseItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ItemQuantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UpdatedAt)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expense.ExpenseId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Item.ItemId)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.MultiItemsId">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.MultiItemsId">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.MultiItemsId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

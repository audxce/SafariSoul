@page
@model SafariSoul.Pages.ExpenseItemsCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
    @if (@HttpContext.Session.GetString("_Type") == "Admin")
        Layout = "_NewLayout";
    @if (@HttpContext.Session.GetString("_Type") == "Other Employee")
        Layout = "_LayoutEmployee";
    @if (@HttpContext.Session.GetString("_Type") == "Animal Handler")
        Layout = "_LayoutAnimalHandler";
    @if (@HttpContext.Session.GetString("_Type") == "Accountant")
        Layout = "_LayoutAccountant";
    @if (@HttpContext.Session.GetString("_Type") == "Human Resources")
        Layout = "_LayoutHumanResources";
    @if (@HttpContext.Session.GetString("_Type") == "Maintenance")
        Layout = "_LayoutMaintenance";
    @if (@HttpContext.Session.GetString("_Type") == "Sales")
        Layout = "_LayoutSales";
}

<h1>Create</h1>

<h4>ExpenseItem</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ExpenseItem.ExpenseId" class="control-label"></label>
                <select asp-for="ExpenseItem.ExpenseId" class ="form-control" asp-items="ViewBag.ExpenseId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseItem.ItemId" class="control-label"></label>
                <select asp-for="ExpenseItem.ItemId" class ="form-control" asp-items="ViewBag.ItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="ExpenseItem.ItemQuantity" class="control-label"></label>
                <input asp-for="ExpenseItem.ItemQuantity" class="form-control" />
                <span asp-validation-for="ExpenseItem.ItemQuantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

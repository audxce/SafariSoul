@page
@model SafariSoul.Pages.DonationCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
    @if (@HttpContext.Session.GetString("_Type") == "Admin")
        Layout = "_NewLayout";
    @if (@HttpContext.Session.GetString("_Type") == "Other Employee")
        Layout = "_LayoutEmployee";
    @if (@HttpContext.Session.GetString("_Type") == "Animal Handler")
        Layout = "_LayoutAnimalHandler";
    @if (@HttpContext.Session.GetString("_Type") == "Accountant")
        Layout = "_LayoutAccountant";
    @if (@HttpContext.Session.GetString("_Type") == "Human Resources")
        Layout = "_LayoutHumanResources";
    @if (@HttpContext.Session.GetString("_Type") == "Maintenance")
        Layout = "_LayoutMaintenance";
    @if (@HttpContext.Session.GetString("_Type") == "Sales")
        Layout = "_LayoutSales";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Edit Donation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
              <input type="hidden" asp-for="Donation.DonationId" />
            <div class="form-group">
                <label asp-for="Donation.DonorId" class="control-label">Donor</label>
                <select asp-for="Donation.DonorId" class="form-control" asp-items="ViewBag.DonorId">
                    <option value="">-- Select Donor --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Donation.AmountDonated" class="control-label"></label>
                <input asp-for="Donation.AmountDonated" class="form-control" />
                <span asp-validation-for="Donation.AmountDonated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation.DonationPurpose" class="control-label"></label>
                <input asp-for="Donation.DonationPurpose" class="form-control" />
                <span asp-validation-for="Donation.DonationPurpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation.DateDonated" class="control-label"></label>
                <input asp-for="Donation.DateDonated" class="form-control" />
                <span asp-validation-for="Donation.DateDonated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

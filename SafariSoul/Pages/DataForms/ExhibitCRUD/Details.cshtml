                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Exhibit.FeedingTime)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Exhibit.FeedingTime)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Exhibit.MealQuantity)</dt>

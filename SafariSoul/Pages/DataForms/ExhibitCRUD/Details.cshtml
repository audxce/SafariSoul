                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Exhibit.IsIndoors)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Exhibit.IsIndoors)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Exhibit.NormalTemperature)</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Exhibit.NormalTemperature)</dd>

                <dt class="col-sm-4">@Html.DisplayNameFor(model => model.Exhibit.Humidity)</dt>

@page
@model SafariSoul.Pages.ExpenseCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_NewLayout.cshtml";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Edit Expense</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseId" class="control-label">Expense Id</label>
                <input asp-for="Expense.ExpenseId" class="form-control" />
                <span asp-validation-for="Expense.ExpenseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseTime" class="control-label">Expense Time</label>
                <input asp-for="Expense.ExpenseTime" class="form-control" />
                <span asp-validation-for="Expense.ExpenseTime" class="text-danger"></span>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="Expense.Category" class="control-label">Category</label>
                <select asp-for="Expense.Category" class="form-control">
                    <option value="">-- Select Category --</option>
                    <option value="vendor">Vendor</option>
                    <option value="employee">Employee</option>
                </select>
                <span asp-validation-for="Expense.Category" class="text-danger"></span>
            </div>
            <div style="height: 20px;"></div>
            <div id="expenseItems">
                @foreach (var expenseItem in Model.ExpenseItems)
                {
                    <div class="row expense-item">
                        <div class="col-md-6 form-group">
                            <label asp-for="@expenseItem.ItemId" class="control-label">Item</label>
                            <select asp-for="@expenseItem.ItemId" class="form-control" asp-items="ViewBag.ItemId"></select>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="@expenseItem.ItemQuantity" class="control-label">Quantity</label>
                            <input asp-for="@expenseItem.ItemQuantity" class="form-control" />
                            <span asp-validation-for="@expenseItem.ItemQuantity" class="text-danger"></span>
                        </div>
                    </div>
                }
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <button type="button" id="addItem" class="btn btn-primary">Add Item</button>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseAccount" class="control-label">Expense Account</label>
                <input asp-for="Expense.ExpenseAccount" class="form-control" />
                <span asp-validation-for="Expense.ExpenseAccount" class="text-danger"></span>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="Expense.ExpenseAmount" class="control-label">Expense Amount</label>
                <input asp-for="Expense.ExpenseAmount" class="form-control" />
                <span asp-validation-for="Expense.ExpenseAmount" class="text-danger"></span>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="Expense.VendorId" class="control-label">Vendor</label>
                <select asp-for="Expense.VendorId" class="form-control" asp-items="ViewBag.VendorId"></select>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="Expense.EmployeeId" class="control-label">Employee</label>
                <select asp-for="Expense.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <label asp-for="Expense.InvoiceId" class="control-label">Invoice Number</label>
                <input asp-for="Expense.InvoiceId" class="form-control" />
                <span asp-validation-for="Expense.InvoiceId" class="text-danger"></span>
            </div>
            <div style="height: 20px;"></div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

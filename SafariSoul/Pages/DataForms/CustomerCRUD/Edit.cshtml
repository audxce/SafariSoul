@page
@model SafariSoul.Pages.CustomerCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_NewLayout.cshtml";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Edit Customer</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Customer.Fname" class="control-label">First Name</label>
                <input asp-for="Customer.Fname" class="form-control" />
                <span asp-validation-for="Customer.Fname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Minit" class="control-label">Middle Initial</label>
                <input asp-for="Customer.Minit" class="form-control" />
                <span asp-validation-for="Customer.Minit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Lname" class="control-label">Last Name</label>
                <input asp-for="Customer.Lname" class="form-control" />
                <span asp-validation-for="Customer.Lname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Gender" class="control-label"></label>
                <select asp-for="Customer.Gender" class="form-control">
                    <option value="">--Select Gender--</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="N/A">Do not wish to answer</option>
                </select>
                <span asp-validation-for="Customer.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.DateOfBirth" class="control-label">Date of Birth</label>
                <input asp-for="Customer.DateOfBirth" class="form-control" />
                <span asp-validation-for="Customer.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.PhoneNo" class="control-label">Phone Number</label>
                <input asp-for="Customer.PhoneNo" class="form-control" />
                <span asp-validation-for="Customer.PhoneNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Address" class="control-label">Address</label>
                <input asp-for="Customer.Address" class="form-control" />
                <span asp-validation-for="Customer.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Customer.Email" class="control-label"></label>
                <input asp-for="Customer.Email" class="form-control" />
                <span asp-validation-for="Customer.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

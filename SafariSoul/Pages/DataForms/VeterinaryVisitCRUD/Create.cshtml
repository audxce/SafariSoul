@page
@model SafariSoul.Pages.VeterinaryVisitCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_NewLayout.cshtml";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Create Veterinary Visit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.VetId" class="control-label">Veterinarian</label>
                <select asp-for="VeterinaryVisit.VetId" class ="form-control" asp-items="ViewBag.VetId">
                    <option value="">-- Select Veterinarian --</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.TimeScheduled" class="control-label">Time Scheduled</label>
                <input asp-for="VeterinaryVisit.TimeScheduled" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.TimeScheduled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.TimeAdmitted" class="control-label"></label>
                <input asp-for="VeterinaryVisit.TimeAdmitted" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.TimeAdmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.TimeDischarged" class="control-label"></label>
                <input asp-for="VeterinaryVisit.TimeDischarged" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.TimeDischarged" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.Urgency" class="control-label"></label>
                <select asp-for="VeterinaryVisit.Urgency" class="form-control">
                    <option value="">-- Select Urgency Level --</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="5">5</option>
                </select>
                <span asp-validation-for="VeterinaryVisit.Urgency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.Animal" class="control-label"></label>
                <select asp-for="VeterinaryVisit.Animal" class ="form-control" asp-items="ViewBag.Animal"></select>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.AnimalCondition" class="control-label">Animal Condition</label>
                <input asp-for="VeterinaryVisit.AnimalCondition" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.AnimalCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.AnimalTreatment" class="control-label">Animal Treatment</label>
                <input asp-for="VeterinaryVisit.AnimalTreatment" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.AnimalTreatment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Follow-up needed?</label>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="VeterinaryVisit.FollowupNeeded" value="true" asp-for="VeterinaryVisit.FollowupNeeded" /> Yes
                    </label>
                </div>
                <div class="form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" type="radio" name="VeterinaryVisit.FollowupNeeded" value="false" asp-for="VeterinaryVisit.FollowupNeeded" /> No
                    </label>
                </div>
                <span asp-validation-for="VeterinaryVisit.FollowupNeeded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

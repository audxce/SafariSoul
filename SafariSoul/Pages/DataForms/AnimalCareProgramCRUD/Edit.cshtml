@page
@model SafariSoul.Pages.AnimalCareProgramCRUD.EditModel

@{
    ViewData["Title"] = "Edit";
    @if (@HttpContext.Session.GetString("_Type") == "Admin")
        Layout = "_NewLayout";
    @if (@HttpContext.Session.GetString("_Type") == "Other Employee")
        Layout = "_LayoutEmployee";
    @if (@HttpContext.Session.GetString("_Type") == "Animal Handler")
        Layout = "_LayoutAnimalHandler";
    @if (@HttpContext.Session.GetString("_Type") == "Accountant")
        Layout = "_LayoutAccountant";
    @if (@HttpContext.Session.GetString("_Type") == "Human Resources")
        Layout = "_LayoutHumanResources";
    @if (@HttpContext.Session.GetString("_Type") == "Maintenance")
        Layout = "_LayoutMaintenance";
    @if (@HttpContext.Session.GetString("_Type") == "Sales")
        Layout = "_LayoutSales";
}

<h1>Edit</h1>

<h4>AnimalCareProgram</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AnimalCareProgram.AnimalProgramId" />
            <div class="form-group">
                <label asp-for="AnimalCareProgram.ProgramName" class="control-label"></label>
                <input asp-for="AnimalCareProgram.ProgramName" class="form-control" />
                <span asp-validation-for="AnimalCareProgram.ProgramName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalCareProgram.ProgramDescription" class="control-label"></label>
                <input asp-for="AnimalCareProgram.ProgramDescription" class="form-control" />
                <span asp-validation-for="AnimalCareProgram.ProgramDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

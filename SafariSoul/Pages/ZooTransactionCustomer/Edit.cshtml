@page
@model SafariSoul.Pages.ZooTransactionCustomer.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>ZooTransaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZooTransaction.TransactionId" />
            <div class="form-group">
                <label asp-for="ZooTransaction.Discount" class="control-label"></label>                         <!--get rid of this too, just need to be ableto add/delete items & tickets-->
                <select asp-for="ZooTransaction.Discount" class="form-control" asp-items="ViewBag.Discount"></select>
                <span asp-validation-for="ZooTransaction.Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

@page
@model SafariSoul.Pages.DonationCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Create Donation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Donation.DonationId" class="control-label">Donation ID</label>
                <input asp-for="Donation.DonationId" class="form-control" />
                <span asp-validation-for="Donation.DonationId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation.DonorId" class="control-label">Donor ID</label>
                <select asp-for="Donation.DonorId" class ="form-control" asp-items="ViewBag.DonorId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Donation.AmountDonated" class="control-label">Amount Donated</label>
                <input asp-for="Donation.AmountDonated" class="form-control" />
                <span asp-validation-for="Donation.AmountDonated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation.DonationPurpose" class="control-label">Donation Purpose</label>
                <input asp-for="Donation.DonationPurpose" class="form-control" />
                <span asp-validation-for="Donation.DonationPurpose" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation.DateDonated" class="control-label">Date of Donation</label>
                <input asp-for="Donation.DateDonated" type = "date"  class="form-control" />
                <span asp-validation-for="Donation.DateDonated" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation.Feedback" class="control-label"></label>
                <input asp-for="Donation.Feedback" class="form-control" />
                <span asp-validation-for="Donation.Feedback" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Donation.Recognition" class="control-label"></label>
                <input asp-for="Donation.Recognition" class="form-control" />
                <span asp-validation-for="Donation.Recognition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

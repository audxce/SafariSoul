<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>@ViewData["Title"] - SafariSoul</title>

    <link href="~/css/loginstyle.css" asp-append-version="true" rel="stylesheet">

     <!-- Google Web Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" asp-append-version="true">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin asp-append-version="true">
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@400;500&family=Quicksand:wght@600;700&display=swap" asp-append-version="true" rel="stylesheet"> 

    <!-- Icon Font Stylesheet -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.10.0/css/all.min.css" asp-append-version="true" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css" asp-append-version="true" rel="stylesheet">

    <!-- Favicon -->
    <link href="~/favicon.png" rel="icon" asp-append-version="true">

    <!-- Libraries Stylesheet -->
    <link href="~/lib/animate/animate.min.css" asp-append-version="true" rel="stylesheet">
    <link href="~/lib/lightbox/css/lightbox.min.css" asp-append-version="true" rel="stylesheet">
    <link href="~/lib/owlcarousel/assets/owl.carousel.min.css" asp-append-version="true" rel="stylesheet">
    <!-- Customized Bootstrap Stylesheet -->
    <link href="~/css/bootstrap.min.css" asp-append-version="true" rel="stylesheet">

    <!-- Template Stylesheet -->
    <link href="~/css/style.css" asp-append-version="true" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" asp-append-version="true" rel="stylesheet">
</head>

<body>
    <!-- Spinner Start -->
    <div id="spinner" class="show bg-white position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center">
        <div class="spinner-border text-primary" style="width: 3rem; height: 3rem;" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>
    <!-- Navbar Start -->
    <nav class="navbar navbar-expand-lg bg-white navbar-light sticky-top py-lg-0 px-4 px-lg-5 wow fadeIn" data-wow-delay="0.1s">
        <a href="@Url.Page("/DefaultPages/Home")" class="navbar-brand p-0">
            <img class="img-fluid me-3" src="~/favicon.png" alt="Icon">
            <h1 class="m-0 text-primary">Safari Soul</h1>
        </a>
        <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse py-4 py-lg-0" id="navbarCollapse">
            <div class="navbar-nav ms-auto">
                <a asp-page="/DefaultPages/Home" class="nav-item nav-link">Home</a>
                <a asp-page="/DefaultPages/Animals" class="nav-item nav-link">Our Animals</a>
                <a asp-page="/DefaultPages/VisitingHours" class="nav-item nav-link">Visiting Hours</a>             
            </div>
        </div>
    </nav>
    <!-- Navbar End -->
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- JavaScript Libraries -->
    <script src="https://code.jquery.com/jquery-3.4.1.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/lib/wow/wow.min.js" asp-append-version="true"></script>
    <script src="~/lib/easing/easing.min.js" asp-append-version="true"></script>
    <script src="~/lib/waypoints/waypoints.min.js" asp-append-version="true"></script>
    <script src="~/lib/counterup/counterup.min.js" asp-append-version="true"></script>
    <script src="~/lib/owlcarousel/owl.carousel.min.js" asp-append-version="true"></script>
    <script src="~/lib/lightbox/js/lightbox.min.js" asp-append-version="true"></script>

    <!-- Template Javascript -->
    <script src="~/js/main.js" asp-append-version="true"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
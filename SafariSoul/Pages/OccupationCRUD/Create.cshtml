@page
@model SafariSoul.Pages.OccupationCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>


<h4>Create Occupation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Occupation.JobTitle" class="control-label">Job Title</label>
                <input asp-for="Occupation.JobTitle" class="form-control" />
                <span asp-validation-for="Occupation.JobTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Occupation.JobDescription" class="control-label">Description</label>
                <input asp-for="Occupation.JobDescription" class="form-control" />
                <span asp-validation-for="Occupation.JobDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Occupation.QualificationsRequired" class="control-label">Qualifications Required</label>
                <input asp-for="Occupation.QualificationsRequired" class="form-control" />
                <span asp-validation-for="Occupation.QualificationsRequired" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Occupation.LowerSalaryRange" class="control-label">Lower Salary Range</label>
                <input asp-for="Occupation.LowerSalaryRange" class="form-control" />
                <span asp-validation-for="Occupation.LowerSalaryRange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Occupation.UpperSalaryRange" class="control-label">Upper Salary Range</label>
                <input asp-for="Occupation.UpperSalaryRange" class="form-control" />
                <span asp-validation-for="Occupation.UpperSalaryRange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

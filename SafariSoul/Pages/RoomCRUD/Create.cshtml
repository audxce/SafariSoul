@page
@model SafariSoul.Pages.RoomCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>


<h4>Create Room</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Room.RoomId" class="control-label">Room ID</label>
                <input asp-for="Room.RoomId" class="form-control" />
                <span asp-validation-for="Room.RoomId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomName" class="control-label">Name</label>
                <input asp-for="Room.RoomName" class="form-control" />
                <span asp-validation-for="Room.RoomName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.RoomFunction" class="control-label">Function</label>
                <input asp-for="Room.RoomFunction" class="form-control" />
                <span asp-validation-for="Room.RoomFunction" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Room.LocationNum" class="control-label">Location Number</label>
                <select asp-for="Room.LocationNum" class ="form-control" asp-items="ViewBag.LocationNum"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

                <span asp-validation-for="ZooTransaction.SellerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZooTransaction.Location" class="control-label"></label>
                <input asp-for="ZooTransaction.Location" class="form-control" />
                <span asp-validation-for="ZooTransaction.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZooTransaction.Discount" class="control-label"></label>
                <select asp-for="ZooTransaction.Discount" class="form-control" asp-items="ViewBag.Discount"></select>
                <span asp-validation-for="ZooTransaction.Discount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>

@page
@model SafariSoul.Pages.VeterinaryVisitCRUD.CreateModel

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}

<head>
    <style>
        .form-group + .form-group {
            margin-top: 20px;
        }
    </style>
</head>

<h4>Create Veterinary Visit</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.VetVisitId" class="control-label">Veterinary Visit ID</label>
                <input asp-for="VeterinaryVisit.VetVisitId" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.VetVisitId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.TimeScheduled" class="control-label">Time Scheduled</label>
                <input asp-for="VeterinaryVisit.TimeScheduled" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.TimeScheduled" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.TimeAdmitted" class="control-label">Time Admitted</label>
                <input asp-for="VeterinaryVisit.TimeAdmitted" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.TimeAdmitted" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.TimeDischarged" class="control-label">Time Discharged</label>
                <input asp-for="VeterinaryVisit.TimeDischarged" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.TimeDischarged" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.Urgency" class="control-label"></label>
                <select asp-for="VeterinaryVisit.Urgency" class="form-control">
                    <option value="">-- Select Urgency --</option>
                    <option value="Resuscitation">Resuscitation</option>
                    <option value="Emergent Care">Emergent Care</option>
                    <option value="Urgent Care">Urgent Care</option>
                    <option value="Nonurgent Care">Nonurgent Care</option>
                    <option value="Convenient Care">Convenient Care</option>
                </select>
                <span asp-validation-for="VeterinaryVisit.Urgency" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.Animal" class="control-label"></label>
                <select asp-for="VeterinaryVisit.Animal" class ="form-control" asp-items="ViewBag.Animal"></select>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.AnimalCondition" class="control-label">Condition</label>
                <input asp-for="VeterinaryVisit.AnimalCondition" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.AnimalCondition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.AnimalTreatment" class="control-label">Treatment</label>
                <input asp-for="VeterinaryVisit.AnimalTreatment" class="form-control" />
                <span asp-validation-for="VeterinaryVisit.AnimalTreatment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="VeterinaryVisit.FollowupNeeded" class="control-label">Follow up needed?</label>
                <select asp-for="VeterinaryVisit.FollowupNeeded" class="form-control">
                    <option value="">-- Select option --</option>
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
                <span asp-validation-for="VeterinaryVisit.FollowupNeeded" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

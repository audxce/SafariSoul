            <div class="form-group">
                <label asp-for="ZooUser.UserType" class="control-label"></label>
                <input asp-for="ZooUser.UserType" class="form-control" />
                <span asp-validation-for="ZooUser.UserType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZooUser.EmployeeId" class="control-label"></label>
                <select asp-for="ZooUser.EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                <span asp-validation-for="ZooUser.EmployeeId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZooUser.CustomerId" class="control-label"></label>
                <select asp-for="ZooUser.CustomerId" class="form-control" asp-items="ViewBag.CustomerId"></select>
                <span asp-validation-for="ZooUser.CustomerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />

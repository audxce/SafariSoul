@{
    ViewData["Title"] = "Edit";
    Layout = "_Layout";
}

<h1>Edit</h1>

<h4>ZooUser</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ZooUser.UserId" />
            <div class="form-group">
                <label asp-for="ZooUser.AuthenticationKey" class="control-label"></label>
                <input asp-for="ZooUser.AuthenticationKey" class="form-control" />
                <span asp-validation-for="ZooUser.AuthenticationKey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ZooUser.UserName" class="control-label"></label>
                <input asp-for="ZooUser.UserName" class="form-control" />
